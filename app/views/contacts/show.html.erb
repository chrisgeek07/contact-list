<div class="container">
  <div class="contact-card mt-4">
    <i class="far fa-address-book"></i>
    <div class="contact-card-info">
      <h4><%= @contact.name%></h4>
      <p><%= @contact.address%></p>
      <p><%= @contact.country%></p>
      <p><%= @contact.phone%></p>
    </div>
  </div>
  <%= link_to "Back", contacts_path, class: "btn btn-primary mt-2" %>
</div>